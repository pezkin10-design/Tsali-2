{
  "expo": {
    "name": "Tsali Scanner",
    "slug": "tsali-scanner",
    "version": "1.0.0",
    "main": "index.js",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "taaliscanner",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#1a73e8"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.pezkindev.tsaliscanner",
      "config": {
        "usesNonExemptEncryption": false
      },
      "infoPlist": {
        "NSCameraUsageDescription": "Tsali Scanner needs camera access to scan sheet music",
        "NSPhotoLibraryUsageDescription": "Tsali Scanner needs access to your photo library",
        "NSMicrophoneUsageDescription": "Tsali Scanner needs microphone access for audio playback",
        "UIRequiredDeviceCapabilities": ["camera"]
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#1a73e8",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": true,
      "package": "com.pezkindev.tsaliscanner",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#1a73e8"
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Tsali Scanner needs camera access to scan sheet music"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Tsali Scanner needs access to your photos",
          "cameraPermission": "Tsali Scanner needs camera access"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
